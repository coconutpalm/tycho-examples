<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.example.rcpmain.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="com.example.rcpmain.Perspective"
            id="com.example.rcpmain.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="com.example.rcpmain.View"
            id="com.example.rcpmain.view">
      </view>
   </extension>
   <extension
         id="rcpmain"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.example.rcpmain.application"
            name="rcpmain">
         <property
               name="appName"
               value="rcpmain">
         </property>
      </product>
   </extension>

</plugin>
